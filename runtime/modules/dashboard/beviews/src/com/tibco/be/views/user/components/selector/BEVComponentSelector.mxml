<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	backgroundColor="#E0E0E0"
	horizontalScrollPolicy="off"
	verticalScrollPolicy="off"
	creationComplete="init()"
>
	<mx:Script>
		<![CDATA[
			import com.tibco.be.views.core.ui.controls.MessageBox;
			
			import mx.core.Application;
			
			protected var _controller:BEVComponentSelectorController;
			
			public function set dataProvider(data:Object):void{
				componentList.dataProvider = data;
			}
			
			private function init():void{
				_controller = new BEVComponentSelectorController(this);
				_controller.init();
			}
			
		]]>
	</mx:Script>
	<mx:List id="componentList" width="100%" height="100%" labelField = "@title"></mx:List>
	<mx:HBox width="100%" height="25" horizontalAlign="right">
		<mx:Button id="selectButton" label="Select"/>
	</mx:HBox>
</mx:VBox>
