<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" verticalGap="0" x="0" y="0" height="100%" width="100%" >
	<mx:Script>
		<![CDATA[
			[Bindable]
			private var _invalidComponent:String = "";
			
			[Bindable]
			private var _message:String = "";
			
			public function set invalidComonentName(value:String):void{
				_invalidComponent = value;
			}
			
			public function set message(value:String):void{
				_message = value;
			}
			
		]]>
	</mx:Script>
	
	<mx:TextArea id="txtMessage" text="{_message}" borderStyle="none" editable="false"
		backgroundAlpha="0.7" backgroundColor="black" color="0xffffff" 
		width="100%" height="30%" fontSize="18"
		textAlign="center" paddingLeft="5" verticalScrollPolicy="off" 
	/>
	
	<mx:TextArea text="{_invalidComponent}" borderStyle="none" editable="false"
		backgroundAlpha="0.7" backgroundColor="black" color="0xffffff" 
		width="100%" height="70%" fontSize="15" y="20"
		textAlign="left" paddingLeft="20" verticalScrollPolicy="off"
	/>
		
	
	
</mx:VBox>