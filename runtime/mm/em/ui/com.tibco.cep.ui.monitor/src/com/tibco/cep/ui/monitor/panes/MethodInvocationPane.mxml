<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Grid width="100%" height="100%">
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
				<mx:Label text="Name:"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%" colSpan="2" horizontalAlign="left" verticalAlign="middle">
				<mx:TextInput id="nameTextBox" editable="false"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
				<mx:Label text="Description:"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%" colSpan="2" horizontalAlign="left" verticalAlign="middle">
				<mx:TextInput id="descTextBox" editable="false"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
				<mx:Label text="Arguments:"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%" colSpan="2">
				<mx:Spacer width="100%" height="100%"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" colSpan="3">
				<mx:DataGrid id="argsDataGrid" height="100%" width="100%" editable="true">
				    <mx:columns>
				        <mx:DataGridColumn headerText="Name" dataField="name" editable="false"/>
				        <mx:DataGridColumn headerText="Type" dataField="type" editable="false"/>
				        <mx:DataGridColumn headerText="Description" dataField="desc" editable="false"/>
				        <mx:DataGridColumn headerText="Default Value" dataField="defaultvalue" editable="false"/>
				        <mx:DataGridColumn headerText="Argument Value" dataField="argvalue" editable="true"/>
				    </mx:columns>
    			</mx:DataGrid>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%">
				<mx:Spacer width="100%" height="100%"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
				<mx:Button label="Invoke" id="invokeButton"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Spacer width="100%" height="100%"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
				<mx:Label text="Results:"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%" colSpan="2">
				<mx:Spacer width="100%" height="100%"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%" colSpan="3" id="resultsGrid">
				<mx:Spacer width="100%" height="100%"/>
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
</mx:Canvas>
