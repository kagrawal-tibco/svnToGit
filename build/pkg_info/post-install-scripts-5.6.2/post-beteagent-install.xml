<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="post-install" default="post-install" basedir=".">
	<property file="post-install.properties"/>
	<import file="common-tasks.xml"/>
	
	<taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
	
	<target name="post-install" depends="import-wrappers,
										 set-subst-vars">
		<echo message="Done post-installation tasks." />
	</target>

	<target name="import-wrappers">
		<echo message="Copying be-teaagent wrapper..." />
		<copy file="${tibco.home}/tools/wrapper/wrap${tibco.wrapper.extension}"
			tofile="${tibco.home}/be/${beVersionShort}/teagent/bin/be-teagent${tibco.wrapper.extension}" />
		<chmod file="${tibco.home}/be/${beVersionShort}/teagent/bin/be-teagent${tibco.wrapper.extension}" perm="755" />
	</target>
	
	<target name="set-subst-vars">
		<antcall target="substitute-variables">
			<param name="out.file" value="${tibco.home}/be/${beVersionShort}/teagent/bin/be-teagent.tra"/>
		</antcall>
		<antcall target="substitute-variables">
			<param name="out.file" value="${tibco.home}/be/${beVersionShort}/teagent/config/be-teagent.props"/>
		</antcall>
		<antcall target="substitute-variables">
			<param name="out.file" value="${tibco.home}/be/${beVersionShort}/teagent/config/log4j.properties"/>
		</antcall>
	<!--	<antcall target="substitute-variables">
			<param name="out.file" value="${tibco.home}/be/${beVersionShort}/teagent/config/rta-config.properties"/>
		</antcall> -->
<!--		<antcall target="substitute-variables">
			<param name="out.file" value="${tibco.home}/be/${beVersionShort}/mm/project/emonitor/MM_InMem.cdd"/>
		</antcall> -->
	</target> 
	
</project> 	
