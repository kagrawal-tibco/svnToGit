/**
 * @description 
 */
String rulefunction RuleFunctions.ToSuccessXML {
	attribute {
		validity = ACTION;
	}
	scope {
		String message;
		boolean escape;
	}
	body {
		String xml = message;
		
		if(escape){
			xml = "<![CDATA[" + message + "]]>";
		}	
	
		return "<success>" + xml + "</success>";
	}
}