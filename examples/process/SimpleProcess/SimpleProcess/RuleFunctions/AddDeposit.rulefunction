/**
 * @description 
 */
void rulefunction RuleFunctions.AddDeposit {
	attribute {
		validity = ACTION;
	}
	scope {
		Concepts.Customer c;
	}
	body {
		System.debugOut("#### Adding deposit to account:"+c.name+" for $1000");
		c.account.balance = c.account.balance + 1000;
		System.debugOut("#### Deposit added to account:"+c.name+" Balance:"+c.account.balance);
	}
}