        menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup3"
        tooltip="Diagram Export to Image">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.PrintActionDelegate"
               icon="icons/print.gif"
               id="com.tibco.cep.diagramming.print"
               label="Print"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup2"
               tooltip="Diagram Print">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.PrintPreviewActionDelegate"
               icon="icons/printPreview.gif"
               id="com.tibco.cep.diagramming.printpreview"
               label="Print Preview"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup2"
               tooltip="Diagram Print Preview">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.PrintSetupActionDelegate"
               icon="icons/printSetup.gif"
               id="com.tibco.cep.diagramming.printsetup"
               label="Print Setup"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup2"
               tooltip="Diagram Print Setup">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.LinkNavigatorActionDelegate"
               icon="icons/linkNavigation.gif"
               id="com.tibco.cep.diagramming.linknavigator"
