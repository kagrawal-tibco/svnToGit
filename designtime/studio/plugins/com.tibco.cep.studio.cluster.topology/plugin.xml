<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.tibco.cep.studio.cluster.topology.editors.ClusterTopologyEditor"
            contributorClass="com.tibco.cep.studio.cluster.topology.editors.ClusterTopologyEditorContributor"
            extensions="st, stopo, sitetopo, sitetopology, siteview"
            icon="icons/cluster_16x16.png"
            id="com.tibco.cep.studio.cluster.topology.editors.clusterEditor"
            name="SiteTopology Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.tibco.cep.studio.cluster.topology.preferences.ClusterTopologyPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="com.tibco.cep.studio.cluster.topology.editorContribution"
            targetID="com.tibco.cep.studio.cluster.topology.editors.clusterEditor">
              <menu
               id="com.tibco.cep.decision.process.diagram.menu"
               label="Diagram"
               path="additions">
            <separator
                  name="DiagramGroup1">
            </separator>
            <separator
                  name="DiagramGroup2">
            </separator>
            <separator
                  name="DiagramGroup3">
            </separator>
            <separator
                  name="DiagramGroup4">
            </separator>
            <separator
                  name="DiagramGroup5">
            </separator>
         </menu>
              <menu
                    id="com.tibco.cep.diagramming.layout_menu"
                    label="&amp;Layout"
                    path="com.tibco.cep.decision.process.diagram.menu/DiagramGroup1">
                 <separator
                       name="LayoutGroup">
                 </separator>
              </menu>
         <menu
               id="com.tibco.cep.diagramming.tool_menu"
               label="&amp;Interactive Tools"
               path="com.tibco.cep.decision.process.diagram.menu/DiagramGroup1">
            <separator
                  name="ToolsGroup">
            </separator>
         </menu>
		<action
        class="com.tibco.cep.diagramming.actions.ExportToImageActionDelegate"
        icon="icons/imageExport.gif"
        id="com.tibco.cep.diagramming.imageexport"
