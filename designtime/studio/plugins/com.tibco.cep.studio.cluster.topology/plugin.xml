               tooltip="Interactive Zoom">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.ZoomActionDelegate"
               icon="icons/zoom.gif"
               id="com.tibco.cep.diagramming.marqueezoom"
               label="&amp;Marquee Zoom"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.tool_menu/ToolsGroup"
               tooltip="Marquee Zoom">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.PanActionDelegate"
               icon="icons/pan.gif"
               id="com.tibco.cep.diagramming.pan"
               label="Pan"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.tool_menu/ToolsGroup"
               tooltip="Pan">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.SelectActionDelegate"
               icon="icons/select.gif"
               id="com.tibco.cep.diagramming.select"
               label="&amp;Select"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.tool_menu/ToolsGroup"
               tooltip="Select">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.FitWindowActionDelegate"
               icon="icons/fitInCanvas.gif"
               id="com.tibco.cep.diagramming.fitinwindow"
               label="&amp;Fit In Window"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup5"
               tooltip="Fit In Window">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.IncrementalLayoutActionDelegate"
               icon="icons/incrementalLayout.gif"
               id="com.tibco.cep.diagramming.incrementallayout"
               label="In&amp;cremental Layout"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup4"
               tooltip="Arrange all objects incrementally">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.RoutingActionDelegate"
               icon="icons/routing.gif"
               id="com.tibco.cep.diagramming.edge.routing"
               label="Link Routing"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup4"
               tooltip="Arrange all edges">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.LabelingActionDelegate"
               icon="icons/labeling.gif"
               id="com.tibco.cep.diagramming.labeling"
               label="L&amp;abeling"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/DiagramGroup4"
               tooltip="Arrange all labels">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.HierarchicalObliqueLayoutActionDelegate"
               icon="icons/hierarchicaldeep.png"
               id="com.tibco.cep.diagramming.hierarchical.oblique.layout"
               label="Hierarchical Layout (Oblique)"
