               tooltip="Arranges the nodes in a hierarchical layout">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.HierarchicalRectilinearLayoutActionDelegate"
               icon="icons/hierarchicaldeep.png"
               id="com.tibco.cep.diagramming.hierarchical.rectilinear.layout"
               label="Hierarchical Layout (Rectilinear)"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.layout_menu/LayoutGroup"
               tooltip="Arranges the nodes in a hierarchical layout">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.SymmetricLayoutActionDelegate"
               icon="icons/symmetricdeep.png"
               id="com.tibco.cep.diagramming.symmetric.layout"
               label="Symmetric Layout"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.layout_menu/LayoutGroup"
               tooltip="Arranges the nodes in a symmetric layout">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.OrthogonalLayoutActionDelegate"
               icon="icons/orthogonaldeep.png"
               id="com.tibco.cep.diagramming.orthogonal.layout"
               label="Orthogonal Layout"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.layout_menu/LayoutGroup"
               tooltip="Arranges the nodes in a orthogonal layout">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.CircularLayoutActionDelegate"
               icon="icons/circulardeep.png"
               id="com.tibco.cep.diagramming.circular.layout"
               label="Circular Layout"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.layout_menu/LayoutGroup"
               tooltip="Arranges the nodes in a circualr layout">
         </action>
         <action
               class="com.tibco.cep.diagramming.actions.LayoutActionDelegate"
               icon="icons/globalLayout.png"
               id="com.tibco.cep.diagramming.default.layout"
               label="Default Layout"
               menubarPath="com.tibco.cep.decision.process.diagram.menu/com.tibco.cep.diagramming.layout_menu/LayoutGroup"
               tooltip="Sets default layout">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.tibco.cep.studio.ui.category"
            class="com.tibco.cep.studio.cluster.topology.wizards.NewClusterTopologyWizard"
            finalPerspective="com.tibco.cep.studio.application.perspective"
            icon="icons/cluster_16x16.png"
            id="com.tibco.cep.deployment.newWizard"
            name="Site Topology">
         <description>
            Create a new Deployment Diagram
         </description>
      </wizard>
   </extension>
<extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="com.tibco.cep.studio.cluster.topology.diagram.propertyContributor"
            labelProvider="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramPropertyLabelProvider">
         <propertyCategory
               category="default"></propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="com.tibco.cep.studio.cluster.topology.diagram.propertyContributor">
         <propertyTab
               category="default"
               id="cluster.diagram.propertyTab.general"
               label="General">
         </propertyTab>
         <propertyTab
               afterTab="cluster.diagram.propertyTab.general"
               category="default"
               id="cluster.diagram.propertyTab.installation"
               label="Installation">
         </propertyTab>
         <propertyTab
               afterTab="cluster.diagram.propertyTab.installation"
               category="default"
               id="cluster.diagram.propertyTab.startPUMethod"
               label="Start-PU-Method">
         </propertyTab>
         <propertyTab
               afterTab="cluster.diagram.propertyTab.general"
               category="default"
               id="cluster.diagram.propertyTab.unit"
               label="Unit">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="com.tibco.cep.studio.cluster.topology.diagram.propertyContributor">
         <propertySection
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramGeneralPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.GeneralTopologyPropertyFilter"
               id="cluster.topology.diagram.general.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
         <propertySection
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramClusterPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.ClusterPropertyFilter"
               id="cluster.topology.diagram.cluster.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
         <propertySection
               afterSection="cluster.topology.diagram.host.propertySection"
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramInstallationPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.InstallationPropertyFilter"
               id="cluster.topology.diagram.installation.propertySection"
               tab="cluster.diagram.propertyTab.installation">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
<!--
         <propertySection
               afterSection="cluster.topology.diagram.installation.propertySection"
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramHawkPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.HawkPropertyFilter"
               id="cluster.topology.diagram.hawk.propertySection"
               tab="cluster.diagram.propertyTab.hawk">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
-->
         <propertySection
               afterSection="cluster.topology.diagram.general.propertySection"
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramHostPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.HostPropertyFilter"
               id="cluster.topology.diagram.host.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
         <propertySection
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramProcessingUnitPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.ProcessingUnitPropertyFilter"
               id="cluster.topology.diagram.unit.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
         <propertySection
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramDeploymentUnitPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.DeploymentUnitPropertyFilter"
               id="cluster.topology.diagram.deploymentunit.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
         <propertySection
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramEdgeGeneralPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.EdgeGeneralPropertyFilter"
               id="cluster.topology.diagram.edge.genreral.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>         
         <propertySection
               afterSection="cluster.topology.diagram.genreral.propertySection"
               class="com.tibco.cep.studio.cluster.topology.properties.ClusterDiagramSitePropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.SitePropertyFilter"
               id="cluster.topology.diagram.site.propertySection"
               tab="cluster.diagram.propertyTab.general">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
         <propertySection
               afterSection="cluster.topology.diagram.installation.propertySection"
               class="com.tibco.cep.studio.cluster.topology.properties.StartPUMethodPropertySection"
               filter="com.tibco.cep.studio.cluster.topology.properties.filter.InstallationPropertyFilter"
               id="com.tibco.cep.studio.cluster.topology.startPUMethodpropertySection"
               tab="cluster.diagram.propertyTab.startPUMethod">
            <input
                  type="com.tomsawyer.graphicaldrawing.TSEObject">
            </input>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="com.tibco.cep.studio.core.projectResourceValidator">
      <validator
            Validator="com.tibco.cep.studio.cluster.topology.utils.SiteTopologyResourceValidator"
            extensions="st">
      </validator>
   </extension>
   <extension
         point="com.tibco.cep.studio.core.refactoringParticipant">
      <refactoringParticipant
            participant="com.tibco.cep.studio.cluster.topology.refactor.SiteTopologyRefactoringParticipant">
      </refactoringParticipant>
   </extension>
</plugin>
