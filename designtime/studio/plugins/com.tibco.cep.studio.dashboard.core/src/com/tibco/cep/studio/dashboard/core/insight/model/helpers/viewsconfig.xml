        <property name="GuidelineLabelFontColor" path="guideLineLabelFontColor" type="Color" default="414141"/>
        <property name="GuidelineValueLabelFontColor" path="guideLineValueLabelFontColor" type="Color" default="333333"/>
        <property name="DataPointLabelFontColor" path="dataPointLabelFontColor" type="Color" default="333333"/>
