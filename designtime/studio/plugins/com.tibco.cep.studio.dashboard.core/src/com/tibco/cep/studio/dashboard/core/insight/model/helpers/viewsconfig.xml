    <enum name="ScaleEnum">
        <map localvalue="Auto" mdvalue="normal"/>
        <map localvalue="None" mdvalue="none"/>
        <map localvalue="Thousands" mdvalue="thousands"/>
        <map localvalue="Millions" mdvalue="millions"/>
        <map localvalue="Billions" mdvalue="billions"/>
