        -->
    </particle>

    <particle name="QueryParam">
        <property name="Type" path="type" type="String" default="String"/>
        <property name="Value" path="value" type="String" default="" optional="true"/>
    </particle>

    <particle name="DataSource">
        <particle name="SrcElement" path="@srcElement" type="Metric" min="0" max="1"/>
        <particle name="QueryParam" path="params" type="QueryParam" min="0" max="-1"/>
        <property name="Query" path="query" type="String" references="PropertyDefinition"/>
    </particle>

    <particle name="AlertAction">
        <property name="Enabled" path="enabled" type="Boolean" default="true"/>
    </particle>

    <particle name="VisualAlertAction" extends="AlertAction">
        <property name="FillColor" path="fillColor" type="Color" optional="true" default="ff0000"/>
        <property name="FontSize" path="fontSize" type="Integer" min="8" max="12" optional="true" default="10"/>
        <property name="FontStyle" path="fontStyle" type="String" enum="FontStyleEnum" optional="true" default="Normal"/>
        <property name="FontColor" path="fontColor" type="Color" optional="true" default="000000"/>
        <property name="DisplayFormat" path="displayFormat" type="String" optional="true" references="PropertyDefinition"/>
        <property name="TooltipFormat" path="tooltipFormat" type="String" optional="true" references="PropertyDefinition"/>
    </particle>

    <particle name="Alert">
        <property name="Enabled" path="enabled" type="Boolean" default="true"/>
        <particle name="Action" path="action" type="Action" min="0" max="-1"/>
    </particle>

    <particle name="RangeAlert" extends="Alert">
        <property name="LowerValue" path="lowerValue" type="Double" optional="true"/>
        <property name="UpperValue" path="upperValue" type="Double" optional="true"/>
        <particle name="Action" path="action" type="VisualAlertAction" min="0" max="-1"/>
    </particle>

    <particle name="ActionRule">
        <property name="ThresholdUnit" path="thresholdUnit" type="ThresholdUnitEnum" default="count"/>
        <property name="Threshold" path="threshold" type="Integer" default="0" allownegative="true"/>
        <particle name="DataSource" path="@dataSource" type="DataSource" max="1"/>
        <particle name="Alert" path="alert" type="RangeAlert" min="0" max="-1"/>
        <particle name="DrillableFields" path="@drillableFields" type="PropertyDefinition" min="0" max="-1"/>
        <particle name="QueryParam" path="params" type="QueryParam" min="0" max="-1"/>
    </particle>

    <particle name="SeriesConfig">
		<!-- TODO find out if any one is using Display Name -->
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <property name="ToolTip" path="toolTip" type="String" optional="true"/>
        <particle name="ActionRule" path="actionRule" type="ActionRule" max="1"/>
    </particle>

