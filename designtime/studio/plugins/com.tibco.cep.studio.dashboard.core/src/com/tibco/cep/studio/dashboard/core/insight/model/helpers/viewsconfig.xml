        <property name="ValueColumnHeaderFontSize" path="valueGuidelineConfig:{TextValueGuidelineConfig}.headerFormatStyle:{FormatStyle}.fontSize" type="Integer" min="8" max="12" default="10"/>
        <property name="ValueColumnHeaderFontStyle" path="valueGuidelineConfig:{TextValueGuidelineConfig}.headerFormatStyle:{FormatStyle}.fontStyle" type="String" enum="FontStyleEnum" default="Bold"/>
        <property name="ValueColumnHeaderAlignment" path="valueGuidelineConfig:{TextValueGuidelineConfig}.headerAlignment" type="String" enum="FieldAlignmentEnum" default="Right"/>
        <particle name="TextSeriesConfig" path="seriesConfig" type="TextSeriesConfig" min="0" max="-1"/>
