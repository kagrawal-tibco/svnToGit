        <map localvalue="Hour (s)" mdvalue="hour"/>
        <map localvalue="Day (s)" mdvalue="day"/>
        <map localvalue="Month (s)" mdvalue="month"/>
        <map localvalue="Year (s)" mdvalue="year"/>
