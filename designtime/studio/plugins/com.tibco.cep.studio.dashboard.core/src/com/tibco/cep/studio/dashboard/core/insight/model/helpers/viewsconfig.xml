        <property name="ValueLabelFontStyle" path="valueDataConfig[formatter=TextFieldFormat]:{ChartValueDataConfig}.formatter:{TextFieldFormat}.formatStyle:{FormatStyle}.fontStyle" type="String" enum="FontStyleEnum" optional="true" default="Normal"/>
        <property name="ValueAxisFieldDisplayFormat" path="valueDataConfig[formatter=TextFieldFormat]:{ChartValueDataConfig}.formatter:{TextFieldFormat}.displayFormat" type="String" optional="true" references="PropertyDefinition"/>
        <property name="ValueAxisFieldTooltipFormat" path="valueDataConfig[formatter=TextFieldFormat]:{ChartValueDataConfig}.formatter:{TextFieldFormat}.toolTipFormat" type="String" optional="true" references="PropertyDefinition"/>
    </particle>

