        <property name="LineDropShadowColor" path="lineDropShadowColor" type="Color" optional="true" default="333333"/>
        <particle name="SeriesColor" path="@seriesColor" type="SeriesColor" max="-1"/>
    </particle>

    <particle name="TextComponentColorSet" extends="ComponentColorSet">
        <property name="HeaderColor" path="headerColor" type="Color" default="FFFFFF"/>
        <property name="HeaderRollOverColor" path="headerRollOverColor" type="Color" default="FFFFFF"/>
