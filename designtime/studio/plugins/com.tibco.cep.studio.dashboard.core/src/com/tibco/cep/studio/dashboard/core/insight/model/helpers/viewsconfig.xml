    <enum name="PlotShapeEnum">
        <map localvalue="Square" mdvalue="square"/>
        <map localvalue="Circle" mdvalue="circle"/>
        <map localvalue="Triangle" mdvalue="triangle"/>
        <map localvalue="Cross" mdvalue="cross"/>
        <map localvalue="Diamond" mdvalue="diamond"/>
