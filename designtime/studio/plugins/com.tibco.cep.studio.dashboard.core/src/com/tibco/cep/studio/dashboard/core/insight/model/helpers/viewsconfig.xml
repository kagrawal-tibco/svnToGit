        <map localvalue="Inplace" mdvalue="inplace"/>
        <map localvalue="ModalDialog" mdvalue="modaldialog"/>
        <map localvalue="NonModalDialog" mdvalue="nonmodaldialog"/>
    </enum>

    <enum name="PartitionStateEnum">
        <map localvalue="Open" mdvalue="open"/>
        <map localvalue="Closed" mdvalue="closed"/>
    </enum>

    <enum name="PanelStateEnum">
        <map localvalue="Maximized" mdvalue="maximized"/>
        <map localvalue="Minimized" mdvalue="minimized"/>
