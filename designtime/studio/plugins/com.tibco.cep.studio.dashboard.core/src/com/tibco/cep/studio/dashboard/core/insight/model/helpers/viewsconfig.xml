        <particle name="ComponentColorSet" path="@componentColorSet" type="ComponentColorSet" min="0" max="-1"/>
        <!-- we will let the implementation com.tibco.cep.studio.dashboard.core.insight.model.configs.LocalSkin handle the validation of default component color set -->
        <particle name="DefaultComponentColorSet" path="@defaultComponentColorSet" type="ComponentColorSet" min="0" max="-1"/>
    </particle>

    <particle name="TextValueDataConfig">
        <property name="Field" path="extractor:{DataExtractor}.@sourceField" type="PropertyDefinition" references="PropertyDefinition"/>
        <property name="HeaderName" path="headerName" type="String" default="Value Column"/>
        <property name="DisplayFormat" path="formatter:{TextFieldFormat}.displayFormat" type="String" optional="true" references="PropertyDefinition"/>
        <property name="TooltipFormat" path="formatter:{TextFieldFormat}.toolTipFormat" type="String" optional="true" references="PropertyDefinition"/>
        <property name="Alignment" path="alignment" type="String" enum="FieldAlignmentEnum" default="Left"/>

        <!--
        <property name="ShowTextValue" path="formatter:{IndicatorFieldFormat}.showTextValue" type="boolean" optional="true"/>
        <property name="TextValueAnchor" path="formatter:{IndicatorFieldFormat}.textValueAnchor" type="String" enum="AnchorPositionEnum" default="None" optional="true"/>
        <property name="Threshold" path="formatter:{ProgressBarFieldFormat}.threshold" type="Integer" min="0" max="100"/>
        <property name="MinValue" path="formatter:{ProgressBarFieldFormat}.minValue" type="Double" default="0"/>
