    <particle name="PageVisualization" extends="Visualization">
        <particle name="TextSeriesConfig" path="seriesConfig" type="TextSeriesConfig" min="0" max="-1"/>
    </particle>

    <particle name="StateVisualization" extends="Visualization">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
