        <map localvalue="Italic" mdvalue="italic"/>
        <map localvalue="Bold,Italic" mdvalue="bold,italic"/>
    </enum>

    <enum name="LineEnum">
        <map localvalue="None" mdvalue="none"/>
        <map localvalue="Vertical" mdvalue="vertical"/>
        <map localvalue="Horizontal" mdvalue="horizontal"/>
        <map localvalue="Both" mdvalue="both"/>
    </enum>

    <enum name="OrientationEnum">
        <map localvalue="Vertical" mdvalue="vertical"/>
        <map localvalue="Horizontal" mdvalue="horizontal"/>
    </enum>

    <enum name="OrientationWithNoneEnum">
        <map localvalue="None" mdvalue=""/>
        <map localvalue="Vertical" mdvalue="vertical"/>
        <map localvalue="Horizontal" mdvalue="horizontal"/>
    </enum>

    <enum name="AnchorEnum">
        <map localvalue="None" mdvalue=""/>
