        <particle name="State" path="@state" type="{StateEntity}"/>
        <particle name="StateSeriesConfig" path="seriesConfig" type="StateSeriesConfig" min="0" max="-1"/>
        <particle name="RelatedComponent" path="@relatedElement" type="Component" min="0" max="-1"/>
    </particle>

    <particle name="Component">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <!-- Not in Anand's list
        <property name="BackgroundColorGradientDirection" path="background.gradientDirection" type="String" enum="GradientDirectionEnum"/>
        -->
    </particle>

    <particle name="ChartComponent" extends="Component">
		<!-- About Help Setting -->
        <property name="About This Chart" path="helpText" type="String" optional="true"/>
		<!-- Component Size Settings -->
        <property name="RowSpan" path="layoutConstraint:{FlowLayoutConstraint}.componentRowSpan" type="Integer" min="1"/> <!-- max="3" -->
        <property name="ColSpan" path="layoutConstraint:{FlowLayoutConstraint}.componentColSpan" type="Integer" min="1"/> <!-- max="3" -->
        <!-- Component Skin Settings -->
        <property name="ColorSet" path="componentColorSetIndex" type="Integer" min="-1"/>
        <property name="SeriesColor" path="seriesColorIndex" type="Integer" min="-1"/>
		<!-- Plot Area Settings -->
		<property name="GridStyle" path="plotArea:{PlotAreaFormat}.foreground:{ForegroundFormat}.line" type="String" enum="LineEnum" default="Both"/>
		<!-- Legend Settings -->
        <property name="LegendOrientation" path="legend:{LegendFormat}.orientation" type="String" enum="OrientationWithNoneEnum" default="None" optional="true"/>
        <property name="LegendAnchor" path="legend:{LegendFormat}.anchor" type="String" enum="AnchorEnum" default="None" optional="true"/>
		<!-- Category Axis Settings -->
        <property name="CategoryAxisHeaderName" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.headerName" type="String" default="" optional="true"/>
        <property name="CategoryAxisHeaderFontSize" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.headerFormatStyle:{FormatStyle}.fontSize" type="Integer" min="8" max="12" default="10"/>
        <property name="CategoryAxisHeaderFontStyle" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.headerFormatStyle:{FormatStyle}.fontStyle" type="String" enum="FontStyleEnum" default="Normal"/>
        <property name="CategoryAxisLabelFontSize" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.labelFormatStyle:{FormatStyle}.fontSize" type="Integer" min="8" max="12" default="10"/>
        <property name="CategoryAxisLabelFontStyle" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.labelFormatStyle:{FormatStyle}.fontStyle" type="String" enum="FontStyleEnum" default="Normal"/>
        <property name="CategoryAxisLabelSortOrder" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.sortOrder" type="String" enum="SortEnum" default="As Listed"/>
        <property name="CategoryAxisLabelAllowDuplicates" path="categoryGuidelineConfig:{ChartCategoryGuidelineConfig}.duplicatesAllowed" type="Boolean" optional="true" default="true"/>
		<!-- Value Axis Settings -->
        <property name="ValueAxisHeaderName" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.headerName" type="String" default="" optional="true"/>
        <property name="ValueAxisHeaderFontSize" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.headerFormatStyle:{FormatStyle}.fontSize" type="Integer" min="8" max="12" default="10"/>
        <property name="ValueAxisHeaderFontStyle" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.headerFormatStyle:{FormatStyle}.fontStyle" type="String" enum="FontStyleEnum" default="Normal"/>
        <property name="ValueAxisLabelFontSize" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.labelFormatStyle:{FormatStyle}.fontSize" type="Integer" min="8" max="12" default="10"/>
        <property name="ValueAxisLabelFontStyle" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.labelFormatStyle:{FormatStyle}.fontStyle" type="String" enum="FontStyleEnum" default="Normal"/>
        <property name="ValueAxisScale" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.scale" type="String" enum="ScaleEnum" default="Auto"/>
        <property name="ValueAxisDivisionCount" path="valueGuidelineConfig:{ChartValueGuidelineConfig}.division" type="Integer" min="1" max="10" default="5"/>
		<!-- Design Time Data Settings -->
		<property name="DesignCategories" path="Category" type="String" array="true" optional="true"/>
		<property name="MaxValue" path="MaxValue" type="Double" optional="true"/>
		<property name="MinValue" path="MinValue" type="Double" optional="true"/>
        <!-- Visualizations -->
        <particle name="BarChartVisualization" path="visualization" type="BarChartVisualization" min="0" max="-1"/>
        <particle name="LineChartVisualization" path="visualization" type="LineChartVisualization" min="0" max="-1"/>
        <particle name="AreaChartVisualization" path="visualization" type="AreaChartVisualization" min="0" max="-1"/>
        <particle name="PieChartVisualization" path="visualization" type="PieChartVisualization" min="0" max="-1"/>
        <particle name="RangePlotChartVisualization" path="visualization" type="RangePlotChartVisualization" min="0" max="-1"/>
        <particle name="ScatterPlotChartVisualization" path="visualization" type="ScatterPlotChartVisualization" min="0" max="-1"/>
		<!-- Related Component Settings -->
		<particle name="RelatedComponent" path="@relatedElement" type="Component" min="0" max="-1"/>
    </particle>

	<particle name="TextComponent" extends="Component">
		<!-- About Help Setting -->
        <property name="About This Chart" path="helpText" type="String" optional="true"/>
		<!-- Component Size Settings -->
        <property name="RowSpan" path="layoutConstraint:{FlowLayoutConstraint}.componentRowSpan" type="Integer" min="1"/> <!-- max="3" -->
        <property name="ColSpan" path="layoutConstraint:{FlowLayoutConstraint}.componentColSpan" type="Integer" min="1"/> <!-- max="3" -->
        <!-- Component Skin Settings -->
        <property name="ColorSet" path="componentColorSetIndex" type="Integer" min="-1"/>
		<!-- Sub Type Settings -->
		<property name="subType" path="subtype" type="String" optional="true"/>
		<!-- Design Time Data Settings -->
		<property name="DesignCategories" path="Category" type="String" array="true" optional="true"/>
		<property name="MaxValue" path="MaxValue" type="Double" optional="true"/>
		<property name="MinValue" path="MinValue" type="Double" optional="true"/>
		<!-- Visualizations -->
        <particle name="TextVisualization" path="visualization" type="TextVisualization" min="0" max="-1"/>
		<!-- Related Component Settings -->
		<particle name="RelatedComponent" path="@relatedElement" type="Component" min="0" max="-1"/>
    </particle>

    <particle name="PageSelectorComponent" extends="Component">
    </particle>

    <particle name="StateMachineComponent" extends="Component">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <property name="StateVisualizationWidth" path="stateVisualizationWidth" type="integer" optional="true" default="80"/>
        <property name="StateVisualizationHeight" path="stateVisualizationHeight" type="integer" optional="true" default="40"/>
        <particle name="StateMachine" path="@stateMachine" type="{StateMachine}"/>
        <particle name="StateVisualization" path="visualization" type="StateVisualization" min="0" max="-1"/>
    </particle>

    <particle name="ClassifierComponent" extends="Component">
        <particle name="ClassifierVisualization" path="visualization" type="ClassifierVisualization" min="0" max="-1"/>
    </particle>

    <particle name="Panel">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <property name="Maximizable" pseudo="true" path="maximizable" type="Boolean" default="true"/>
        <property name="Minimizable" pseudo="true" path="minimizable" type="Boolean" default="true"/>
        <property name="SpanPercentage" path="span" type="String" min="1%" max="100%"/>
        <property name="ScrollBar" pseudo="true" path="scrollBar" type="String" enum="ScrollBarConfigEnum" default="Auto"/>
        <property name="State" pseudo="true" path="state" type="String" enum="PanelStateEnum" default="Normal"/>
        <particle name="Component" path="@component" type="Component" min="0" max="-1"/>
        <!--
            The following three *should be* set if the panel
            contains any text/chart component and *should not be* set
            otherwise.
        -->
        <property name="LayoutRepositioningAllowed" pseudo="true" path="layout:{FlowLayout}.repositioningAllowed" type="boolean" optional="true" default="true"/>
        <property name="LayoutComponentWidth" pseudo="true" path="layout:{FlowLayout}.componentWidth" type="Integer" optional="true" default="200"/>
        <property name="LayoutComponentHeight" pseudo="true" path="layout:{FlowLayout}.componentHeight" type="Integer" optional="true" default="140"/>
    </particle>

    <particle name="Partition">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <property name="Vertical" pseudo="true" path="vertical" type="Boolean" default="true"/>
        <property name="SpanPercentage" path="span" type="String" min="1%" max="100%"/>
        <property name="State" pseudo="true" path="state" type="String" enum="PartitionStateEnum" default="Open"/>
        <particle name="Panel" path="panel" type="Panel" max="-1"/>
    </particle>

    <particle name="Page">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <property name="DisplayMode" pseudo="true" path="displayMode" type="String" enum="DisplayModeEnum" default="inplace"/>
        <particle name="Partition" path="partition" type="Partition" max="-1"/>
        <particle name="PageVisualization" path="visualization" type="PageVisualization" min="0" max="1"/>
    </particle>

    <particle name="DashboardPage" extends="Page"/>

    <particle name="View">
        <property name="Display Name" path="displayName" type="String" optional="true"/>
        <particle name="DefaultPage" path="@defaultPage" type="Page" min="1" max="1"/>
        <particle name="Page" path="@accessiblePage" type="Page" min="1" max="-1"/>
        <!-- Special case: changed Skin from particle to property with drop down list. Java.
        <particle name="Skin" path="@skin" type="Skin"/>
        <property name="Skin" path="@skin" type="Skin" enum="Dummy"/>
        -->

        <particle name="Skin" path="@skin" type="Skin" min="0" max="1"/>

        <!-- Not supported per Anannd
        <particle name="Locale" path="@locale" type="Locale"/>
        -->
        <particle name="Attribute" path="attribute" type="ViewAttribute" min="0" max="-1"/>
    </particle>

    <particle name="ContextActionRuleSet">
        <property name="ApplicationContext" path="diContext" type="String"/>
        <particle name="ActionRule" path="@actionRule" type="{MDActionRule}" min="0" max="-1"/>
    </particle>

    <particle name="Login">
        <property name="Title" path="title" type="String" optional="true"/>
        <property name="Image URL" path="imageURL" type="ImageURL" optional="true"/>
    </particle>

    <particle name="HeaderLink">
        <property name="URLName" path="urlName" type="String"/>
        <property name="URLLink" path="urlLink" type="String"/>
    </particle>

    <particle name="Header">
        <property name="Title" path="title" type="String" optional="true" pseudo="true" default=""/>
        <property name="Image URL" path="brandingImage" optional="true" type="ImageURL"/>
        <property name="brandingText" pseudo="true" path="brandingText" type="String" optional="true" default=""/>
        <particle name="HeaderLinks" path="headerLink" type="HeaderLink" min="0" max="5"/>
    </particle>

    <particle name="ComponentGalleryFolder">
        <particle name="SubFolder" path="subFolder" type="ComponentGalleryFolder" min="0" max="-1"/>
        <particle name="Component" path="@component" type="Component" min="0" max="-1"/>
    </particle>

    <particle name="RolePreference">
    	<property name="Role" path="role" type="String" optional="true" default=""/>
        <particle name="Gallery" path="gallery" type="ComponentGalleryFolder" min="0" max="1"/>
        <particle name="View" path="@view" type="View" min="1" max="1"/>
    </particle>

