<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.tibco.cep.sharedresource.hawk.HawkEditor"
            default="true"
            extensions="hawk"
            icon="icons/hawk.gif"
            id="com.tibco.cep.sharedresource.hawk.HawkEditor"
            name="Hawk Editor">
      </editor>
	</extension>
   <extension
         point="org.eclipse.ui.newWizards">
		<category
	         id="com.tibco.cep.sharedresource.ui.category"
	         name="TIBCO Shared Resources">
		</category>
		<wizard
	           canFinishEarly="false"
	           category="com.tibco.cep.sharedresource.ui.category"
	           class="com.tibco.cep.sharedresource.ui.wizards.NewHawkWizard"
	           finalPerspective="com.tibco.cep.studio.application.perspective"
	           icon="icons/hawk.gif"
	           id="com.tibco.cep.studio.ui.newHawkWizard"
	           name="Hawk Connection">
	        <description>
	           Create a new Hawk Connection resource
	        </description>
		</wizard>
	</extension>			      
    <extension
         point="com.tibco.cep.studio.core.projectResourceValidator">
      <validator
            Validator="com.tibco.cep.sharedresource.validation.HawkSharedResourceValidator"
            extensions="hawk">
      </validator>
	</extension>
    <extension
         point="com.tibco.cep.studio.core.refactoringParticipant">
      <refactoringParticipant
            participant="com.tibco.cep.sharedresource.refactor.HawkRefactoringParticipant">
      </refactoringParticipant>
	</extension>
    <extension
          point="com.tibco.cep.sharedresource.sharedResourcePropertyProvider">
       <SharedResource
             sharedResourcePropertyProvider="com.tibco.cep.sharedresource.hawk.DefaultSharedResourcePropertyProvider"></SharedResource>
    </extension> 

</plugin>
